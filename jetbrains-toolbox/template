# Template file for 'jetbrains-toolbox'
pkgname=jetbrains-toolbox
version=1.18.7609
revision=1
archs="x86_64"
short_desc="Manage your JetBrains tools easily"
maintainer="mobinmob <mobinmob@disroot.org>"
license="custom:proprietary" #avoid vlicense
homepage="https://www.jetbrains.com/toolbox-app/"
distfiles="https://download.jetbrains.com/toolbox/jetbrains-toolbox-${version}.tar.gz"
checksum=f4eae649a88baec0c4b4f7db84fa290ebcd6151aef8856ab3af42b97add40d10
nopie=yes


do_install() {
	vmkdir usr/bin
	vcopy "*" usr/bin
	vmkdir usr/share/icons
	cp "${FILESDIR}/jetbrains-toolbox.png" "${DESTDIR}/usr/share/icons/"
	vmkdir usr/share/applications
	cp "${FILESDIR}/jetbrains-toolbox.desktop" "${DESTDIR}/usr/share/applications"
}
